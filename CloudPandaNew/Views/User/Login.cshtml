@model CloudPandaNew.Context.User

@{
    ViewBag.Title = "Login";
}

<style>
    .rederr {
        color: red;
        font-size: xx-small;
    }
</style>

<script>
    setTimeout(() => {
        const box = document.getElementById('hide');
        box.style.display = 'none';
    }, 3000);
</script>

<h2>User Login</h2>
<br />
<a href="@Url.Action("SignUp", "User")" class="btn btn-secondary">Sign Up</a>

@if (ViewBag.Invalid != null)
{
    <div id="hide" , class="alert alert-danger">
        <strong>@ViewBag.Invalid </strong>
    </div>
}
@if (TempData["Logout"] != null)
{
    <div id="hide" , class="alert alert-info">
        <strong>@TempData["Logout"] </strong>
    </div>
}

<hr />



@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(x => x.Username)
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Username, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            <input id="btnLogin" type="submit" value="Login" class="btn btn-primary" />
            <a href="@Url.Action("ClearLogin")" class="btn btn-danger">Clear</a>
        </div>
    </div>
}

