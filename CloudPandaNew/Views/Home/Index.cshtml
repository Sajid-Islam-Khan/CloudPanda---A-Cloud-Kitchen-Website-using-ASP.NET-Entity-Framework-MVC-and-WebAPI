@{
    ViewBag.Title = "CloudPanda - Your Local Cloud Kitchen";
}

<main>
    <!-- Hero Section -->
    <section class="row bg-light py-5" aria-labelledby="heroTitle" style="background-image: url('https://images.pexels.com/photos/745988/pexels-photo-745988.jpeg'); background-size: cover; background-position: center; ">
        <div class="col text-center text-white">
            <h1 id="heroTitle" class="display-4">CloudPanda</h1>
            <p class="lead">Connecting local buyers with sellers through cloud kitchens, bringing your favorite franchise flavors to your doorstep.</p>

        </div>
    </section>

    <!-- Feature Sections -->
    <div class="row text-center py-5">
        <!-- Buyer Section -->
        <section class="col-md-4" aria-labelledby="buyerTitle">
            <img src="https://images.pexels.com/photos/5953588/pexels-photo-5953588.jpeg" class="img-fluid rounded-top mb-3" alt="For Buyers">
            <h2 id="buyerTitle">For Buyers</h2>
            <p>Experience the convenience of having your favorite meals delivered fresh from trusted local sellers who borrow recipes from top franchises.</p>
            <p></p>
        </section>

        <!-- Seller Section -->
        <section class="col-md-4" aria-labelledby="sellerTitle">
            <img src="https://images.pexels.com/photos/784633/pexels-photo-784633.jpeg" class="img-fluid rounded-top mb-3" alt="For Sellers">
            <h2 id="sellerTitle">For Sellers</h2>
            <p>Expand your reach by selling high-demand franchise-style meals to local buyers. Join the CloudPanda seller network and grow your business!</p>
            <p></p>
        </section>

        <!-- Franchise Section -->
        <section class="col-md-4" aria-labelledby="franchiseTitle">
            <img src="https://images.pexels.com/photos/10092821/pexels-photo-10092821.jpeg" class="img-fluid rounded-top mb-3" alt="Franchise Partners">
            <h2 id="franchiseTitle">Franchise Partners</h2>
            <p>Bring your brand to local communities through our platform. Partner with CloudPanda to expand your franchise’s presence nationwide.</p>
            <p></p>
        </section>
    </div>

    <!-- CTA Section -->
    <section class="row bg-dark text-white py-5 text-center">
        <div class="col">
            <h2>Join CloudPanda Today</h2>
            <p>Whether you're a buyer craving something delicious or a seller ready to share amazing recipes, CloudPanda is your gateway to great food and seamless delivery.</p>
            <p><a href="/User/SignUp" class="btn btn-success btn-lg">Sign Up Now &raquo;</a></p>
        </div>
    </section>

    <!-- Testimonials Section -->
</main>
